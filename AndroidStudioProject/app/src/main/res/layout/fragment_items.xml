<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.BiomeFragment">


    <TextView
        android:id="@+id/titleFragmentTV"
        android:layout_width="126dp"
        android:layout_height="72dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="19dp"
        android:layout_marginTop="28dp"
        android:text="Items"
        android:textSize="46dp"
        tools:text="Items" />

    <ImageView
        android:id="@+id/itemsFragmentIV"
        android:layout_width="186dp"
        android:layout_height="133dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="12dp"
        app:srcCompat="@drawable/item_feat" />

    <TextView
        android:id="@+id/overviewFragmentTV"
        android:layout_width="386dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="14dp"
        android:layout_marginTop="153dp"
        android:text="Items are simply the objects in game that can be looted or crafted. Certain items require other items to be placed down in the players vicinity in order for them to be crafted, for example the capes in Valheim must be crafted at a workbench."
        android:textSize="18sp"
        tools:text="Items are simply the objects in game that can be looted or crafted. Certain items require other items to be placed down in the players vicinity in order for them to be crafted, for example the capes in Valheim must be crafted at a workbench." />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/itemsRV"
        android:layout_width="wrap_content"
        android:layout_height="436dp"
        android:layout_below="@+id/overviewFragmentTV"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="14dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="8dp" />

</RelativeLayout>