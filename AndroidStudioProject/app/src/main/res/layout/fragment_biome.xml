<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.BiomeFragment">


    <TextView
        android:id="@+id/biome_titleTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/biome_imageIV"
        android:layout_alignEnd="@id/biome_imageIV"
        android:layout_alignBottom="@id/biome_imageIV"
        android:text="Biome"
        android:textSize="36sp"
        tools:text="Biomes" />

    <ImageView
        android:id="@+id/biome_imageIV"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:src="@drawable/biome_feat" />

    <TextView
        android:id="@+id/biome_overviewTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/biome_imageIV"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:text="Biomes are the different natural environments that make up the outside world. Currently in game there are 6 Biomes. They consist of the Ocean, Mountains, Plains, Swamp, Black Forest, and the Meadows"
        android:textSize="16dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/biome_overviewTV"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="0dp" />

</RelativeLayout>