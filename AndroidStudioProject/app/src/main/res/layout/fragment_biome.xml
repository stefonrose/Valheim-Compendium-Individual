<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.BiomeFragment">


    <TextView
        android:id="@+id/titleFragmentTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="34dp"
        android:layout_marginTop="18dp"
        android:text="Biome"
        android:textSize="36sp"
        tools:text="Biomes" />

    <ImageView
        android:id="@+id/itemsFragmentIV"
        android:layout_width="189dp"
        android:layout_height="260dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="9dp"
        android:src="@drawable/biome_feat" />

    <TextView
        android:id="@+id/overviewFragmentTV"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="22dp"
        android:layout_marginTop="80dp"
        android:text="Biomes are the different natural environments that make up the outside world. Currently in game there are 6 Biomes. They consist of the Ocean, Mountains, Plains, Swamp, Black Forest, and the Meadows"
        android:textSize="16dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="400dp"
        android:layout_height="422dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="3dp"
        android:layout_marginBottom="29dp" />

</RelativeLayout>